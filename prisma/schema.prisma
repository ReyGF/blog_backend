generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(uuid())
  userId      Int       @unique
  title       String
  content     String
  description String?
  image       String?
  views       Int?
  likes       Int?
  slug        String?
  createdAt   DateTime
  updateAt    DateTime
  isDeleted   Boolean   @default(false)
  comments    Comment[]
}

model Comment {
  id     Int    @id @default(autoincrement())
  postId String @unique
  post   Post   @relation(fields: [postId], references: [id])
}

model Role {
  id          Int    @id @unique @default(autoincrement())
  role        String @unique
  description String
}
